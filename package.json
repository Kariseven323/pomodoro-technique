{
  "name": "pomodoro-technique",
  "version": "0.1.0",
  "description": "Windows 番茄钟（专注模式自动终止干扰程序）",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite dev",
    "build": "bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "check": "bunx --bun -p @sveltejs/kit svelte-kit sync && bunx --bun svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bunx --bun -p @sveltejs/kit svelte-kit sync && bunx --bun svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "bunx -p @tauri-apps/cli tauri"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
