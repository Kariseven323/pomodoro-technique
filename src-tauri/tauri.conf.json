{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "番茄钟",
  "version": "0.1.0",
  "identifier": "com.code.pomodoro-technique",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "番茄钟",
        "width": 380,
        "height": 600,
        "minWidth": 340,
        "minHeight": 520,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "windows": {
      "wix": {
        "language": {
          "zh-CN": {
            "localePath": "wix/zh-CN.wxl"
          }
        }
      }
    }
  }
}
